<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hearbuddy">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".NuvemDePalavras"/>
        <activity android:name=".AdicionarDocumentoActivity" />
        <activity android:name=".AdicionarDisciplinaActivity" />
        <activity android:name=".CronogramaEditar" />
        <activity android:name=".CronogramaHome" />
        <activity android:name=".CronogramaDisciplina" />

        <receiver android:name=".CronogramaAlarme"
            android:permission="TODO">
            <intent-filter>
                <action android:name="i.love.myself" />
            </intent-filter>
        </receiver>

        <activity android:name=".GravadorAudio" />

        <service android:name=".RecordingService" />

        <activity
            android:name=".Documento"
            android:label="@string/title_activity_documento"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Disciplina"
            android:label="@string/title_activity_disciplina"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TelaDocumento"
            android:label="@string/title_activity_tela_documento"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".TelaDisciplina" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>