<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141416"
    tools:context=".ui.Documento">

    <include
        android:id="@+id/include"
        layout="@layout/content_documento"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#141416"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="63dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btAdicionarDocumento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/fuck_icone_adicionar" />

    <ImageButton
        android:id="@+id/btArmazenamentoInterno"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/roundcorner"
        android:backgroundTint="#caba54"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="start|bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/fuck_icon_arquivo"
        android:contentDescription="TODO" />

</androidx.constraintlayout.widget.ConstraintLayout>